{
  "name": "react-intl-demo",
  "version": "1.0.0",
  "private": true,
  "author": "Andrew Craswell",
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "eject": "react-scripts eject",
    "localize": "yarn localize:extract && yarn localize:compile",
    "localize:extract": "formatjs extract \"src/**/*.ts*\" --out-file src/i18n/source/strings.json --id-interpolation-pattern [sha512:contenthash:base64:6] --extract-source-location",
    "localize:compile": "formatjs compile src/i18n/source/strings.json --out-file src/i18n/translated/en-US.json"
  },
  "dependencies": {
    "@fluentui/react": "^8.107.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-intl": "^6.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.4",
    "@craco/craco": "^7.1.0",
    "@formatjs/cli": "^6.0.4",
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.35",
    "@types/react-dom": "^18.0.11",
    "babel-plugin-react-intl": "^8.2.25",
    "eslint-plugin-formatjs": "^4.9.1",
    "react-scripts": "^5.0.1",
    "typescript": "^4.9.5"
  },
  "eslintConfig": {
    "extends": "react-app",
    "plugins": [
      "formatjs"
    ],
    "rules": {
      "formatjs/no-offset": "error"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
